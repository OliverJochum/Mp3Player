<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<fx:root type="BorderPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
	<center>
		<Pane prefHeight="600.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <children>
            <ListView prefHeight="600.0" prefWidth="380.0" fx:id="playlistLV"/>
            <ScrollBar layoutX="380.0" orientation="VERTICAL" prefHeight="600.0" prefWidth="20.0" />
         </children></Pane>
	</center>
	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="File">
					<items>
						<MenuItem mnemonicParsing="false" text="Settings" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="View">
					<items>
						<MenuItem mnemonicParsing="false" text="Player" fx:id="playerItem"/>
						<MenuItem mnemonicParsing="false" text="Playlist" fx:id="playlistItem"/>
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
</fx:root>
